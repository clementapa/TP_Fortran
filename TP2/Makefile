# ---------------------------------------------------------------------
# Compiler selection 
# ---------------------------------------------------------------------

GFOR = /.

# ---------------------------------------------------------------------
# Compiler options 
# ---------------------------------------------------------------------

GFOROPT = 

# ---------------------------------------------------------------------
# FILES TO COMPILE 
# ---------------------------------------------------------------------

OBJ_FILES = ModDonnee.o ModElement.o ModListe.o listes.o \


#----------------------------------------------------------------------
# PATHS 
#----------------------------------------------------------------------

SRCDIR = .


#----------------------------------------------------------------------
# LIBS
#---------------------------------------------------------------------

LIBS =
 
INCL = 

#---------------------------------------------------------------------
# TARGETS 
#---------------------------------------------------------------------

EXE = liste

TO_CLEAN =  $(EXE) *~ $(OBJ_FILES) *.mod

#------------------------------------------------------------
# AutoCompiling
#------------------------------------------------------------

all: $(EXE)

.SUFFIXES:  .f90 .o 

$(EXE): $(OBJ_FILES)
	bla=;\
	for file in $(OBJ_FILES); do bla="$$bla `echo $$file`" ; done; \
	$(GFOR) $(GFOROPT) -o $@ $$bla $(LIBS)

clean:
	rm -rf $(TO_CLEAN)

.f90.o:
	$(GFOR) $(GFOROPT) $(INCL) -c -o $@ `test -f '$<' || echo '$(SRCDIR)/'`$<

